---
import Paragraph from "../shared/Paragraph.astro";

export interface Props {
    name: string;
    phone: string;
    imgName: string;
    color: string;
    businessId: string;
}
const { name, phone, imgName, color, businessId } = Astro.props;
const backgroundImg = `/images/${imgName}`;
---

<div
    class="flex bg-[rgb(var(--color-bg), 0.8)] backdrop-blur flex-col gap-4 text-left rounded-2xl border border-solid border-slate-800 relative shadow-md"
>
    <div
        class={`bg-gradient-to-r ${color} from-sky-500 to-indigo-500 h-28 rounded-2xl`}
    >
    </div>
    <img
        loading="lazy"
        alt={name}
        src={backgroundImg}
        class={`absolute object-cover w-28 h-28 rounded-full left-1/2 transform -translate-x-1/2 top-12`}
    />
    <div class="px-9 pb-9">
        <div class="pt-16">
            <h3 class="mb-2 font-medium text-lg text-primary">{name}</h3>
            <div class="flex gap-2 items-center">
                <div>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="32"
                        height="32"
                        viewBox="0 0 512 512"
                        ><path
