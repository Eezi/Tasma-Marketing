---
import Button from "../shared/Button.astro";
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import ContactCard from "../cards/Contact.astro";
const formsparkKey = import.meta.env.FORMSPARK_PASS;
---

<section id="cta" class="pb-20">
    <Container>
        <div
            class="w-full relative py-8 md:py-10 px-6 md:px-8 rounded-2xl bg-gradient-to-tr from-gray-900"
        >
            <div class="absolute right-0 top-0 h-full w-full flex justify-end">
                <div
                    class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl"
                >
                    <span
                        class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"
                    ></span>
                    <span
                        class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
                    ></span>
                    <span
                        class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
                    ></span>
                </div>
            </div>

            <div class="absolute left-0 bottom-0 h-full w-full flex items-end">
                <div
                    class="w-28 h-28 overflow-auto flex rounded-xl relative blur-2xl"
                >
                    <span
                        class="absolute w-16 h-16 -top-1 -right-1 bg-green-500 rounded-md rotate-45"
                    ></span>
                    <span
                        class="absolute w-16 h-16 -bottom-1 -right-1 bg-[#FCDC58] rounded-md rotate-45"
                    ></span>
                    <span
                        class="absolute w-16 h-16 -bottom-1 -left-1 bg-primary rounded-md rotate-45"
                    ></span>
                </div>
            </div>
            <div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
                <h1
                    class="text-2xl/tight sm:text-4xl/tight md:text-5xl/tight
          font-bold text-heading-1"
                >
                Ota askel kohti tehokkaampaa 
                     <span
                        class="text-balance text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-30% via-primary"
                        >markkinointia
                    </span>
                </h1>
                <h2 class="pt-10 text-xl text-white font-semibold">
                    Laita meille viesti sähköpostilla <a
                        href="mailto: tasma.markkinointi@gmail.com"
                        class="text-primary font-medium"
                        >tasma.markkinointi@gmail.com</a
                    ><br />
                    tai jätä yhteydenottopyyntö alla olevalla lomakkeella.
                </h2>
                <form
                    class="w-full mx-auto max-w-lg pt-10"
                    action={`https://submit-form.com/${formsparkKey}`}
                >
                    <div class="flex flex-wrap -mx-3 mb-6">
                        <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
                            <label
                                class="block text-left uppercase tracking-wide text-gray-200 text-xs font-bold mb-2"
                                for="grid-first-name"
                            >
                                Sähköposti
                            </label>
                            <input
                                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-red-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white"
                                id="grid-first-name"
                                type="email"
                                name="email"
                            />
                        </div>
                        <div class="w-full md:w-1/2 px-3">
                            <label
                                class="block text-left uppercase tracking-wide text-gray-200 text-xs font-bold mb-2"
                                for="grid-last-name"
                            >
                                Nimi
                            </label>
                            <input
                                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                                id="grid-last-name"
                                type="text"
                                name="name"
                            />
                        </div>
                    </div>
                    <div class="flex flex-wrap -mx-3 mb-6">
                        <div class="w-full px-3">
                            <label
                                class="block uppercase text-left tracking-wide text-gray-200 text-xs font-bold mb-2"
                                for="grid-password"
                            >
                                Vapaamuotoinen teksti
                            </label>
                            <textarea
                                id="message"
                                name="message"
                                rows="4"
                                cols="50"
                                class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
                            ></textarea>
                        </div>
                    </div>

                    <Button type="submit" variant={"primary"}>
                        <span class="text-white relative z-[5]">Lähetä</span>
                    </Button>
                </form>
                <h2 class="pt-20 text-xl text-white font-semibold">
                    Luottohenkilösi Täsmä Markkinoinnissa
                </h2>
                <div class="flex justify-center pt-8 gap-8 flex-wrap">
                    <ContactCard
                        imgName="avatarvili.jpg"
                        name="Vili Vepsä"
                        phone="040 9621 636"
                        color="from-indigo-500 to-orange-500"
                        businessId="3374466-3"
                    />
                    <ContactCard
                        imgName="avatarramon.jpg"
                        name="Ramon Daler"
                        businessId="3460982-6"
                        phone="040 4653 062"
                        color="from-indigo-500 to-green-500"
                    />
                </div>
            </div>
        </div>
    </Container>
</section>
